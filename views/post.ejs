<%- include("partials/header"); -%>

<h1><%=title%></h1>
<p><%=content%></p>

<form action="/delete" method="post">
  <button type="submit" name="deletebutton" value="<%= id %> " class="btn btn-danger">
      Delete Post
  </button>
</form>

<form action="/update" method="post">
  <div class="form-group">
    <label>Title</label>
    <input class="form-control" type="text" name="updateTitle">
    <label>Post</label>
    <textarea class="form-control" name="updateBody" rows="5" cols="30"></textarea>
  </div>
  <button type="submit" name="updatebutton" value="<%= id %> " class="btn btn-warning">
      Update Post
  </button>
</form>


<%- include("partials/footer"); -%>
